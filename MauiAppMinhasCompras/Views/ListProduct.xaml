<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListProduct"
             Title="Minhas Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1"/>
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <SearchBar x:Name="txt_search" 
                   Margin="-15, 0,0 ,0"
                   Placeholder="Busca de produtos"
                   TextChanged="txt_search_TextChanged"/>
        <Frame Padding="0" Margin="10" VerticalOptions="FillAndExpand">
            <ListView x:Name="lst_produtos" 
                  IsPullToRefreshEnabled="True" Refreshing="lst_produtos_Refreshing"
                  ItemSelected="lst_produtos_ItemSelected">
                <ListView.Header>
                    <Grid ColumnDefinitions="30, 180, 100, 100, 100"
                          BackgroundColor="{StaticResource Gray950}">
                        <Label Grid.Column="0" Text="Id" Padding="5" FontAttributes="Bold"/>
                        <Label Grid.Column="1" Text="Descricao" Padding="5" FontAttributes="Bold" />
                        <Label Grid.Column="2" Text="Quantidade" Padding="5" FontAttributes="Bold" />
                        <Label Grid.Column="3" Text="Preco" Padding="5" FontAttributes="Bold" />
                        <Label Grid.Column="4" Text="Total" Padding="5" FontAttributes="Bold" />
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Remover" Clicked="MenuItem_Clicked"/>
                            </ViewCell.ContextActions>
                            <Grid ColumnDefinitions="30, 180, 100, 100, 100">
                                <Label Grid.Column="0" Text="{Binding Id}"/>
                                <Label Grid.Column="1" Text="{Binding Descricao}" TextTransform="Uppercase" />
                                <Label Grid.Column="2" Text="{Binding Quantidade}"/>
                                <Label Grid.Column="3" Text="{Binding Preco, StringFormat='{}{0:c}'}" />
                                <!-- StringFormat='R${0:F2}'} para por duas casas decimais -->
                                <Label Grid.Column="4" Text="{Binding Total, StringFormat='{}{0:c}'}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>
    </StackLayout>
</ContentPage>